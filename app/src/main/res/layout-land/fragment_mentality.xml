<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/mentality_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/mentality_title_hint"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:id="@+id/mentality_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/mentality_content_hint"
        android:layout_gravity="center_horizontal" />
    <Button
        style="@style/mentality_button.Strong"
        android:id="@+id/mentality_button"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_gravity="center"
        android:text="@string/mentality_button_text"
        />

</LinearLayout>